        "building": {
          "type": "string",
          "title": "อาคาร"
        },
        "villageNo": {
          "type": "string",
          "title": "หมู่ที่/ชื่อหมู่บ้าน"
        },
        "lane": {
          "type": "string",
          "title": "ซอย"
        },
        "road": {
          "type": "string",
          "title": "ถนน"
